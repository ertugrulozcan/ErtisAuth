@using ErtisAuth.Hub.Helpers
@model ErtisAuth.Hub.ViewModels.BulkDeleteViewModel

@if (Model != null)
{
    <div id="bulkDeleteModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="bulkDeleteModalTitle" aria-hidden="true" style="display: none;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="text-transform: capitalize;">
                    <h5 class="modal-title vertical-center-flex">Delete Selected</h5>
                    <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                        <i class="bi bi-x-lg"></i>
                    </div>
                </div>
                
                <div class="modal-body">
                    <p><strong>Are you absolutely sure?</strong></p>
                    <div class="alert bg-light-danger border border-danger border-dashed d-flex flex-column flex-sm-row w-100 p-5">
                        <span class="svg-icon svg-icon-2x svg-icon-danger me-4 mb-5 mb-sm-0">
                            @Html.Raw(SvgIcons.Warning)
                        </span>
                        <div class="d-flex vertical-center-flex pe-0">
                            <strong>Unexpected bad things will happen if you donâ€™t read this!</strong>
                        </div>
                    </div>

                    <p>Delete all selected items?</p>
                    
                    <div class="alert alert-warning bg-warning d-flex align-items-center p-5 mb-10">
                        <div class="d-flex flex-column">
                            <h5 class="mb-1 text-dark">Warning</h5>
                            <span>This action cannot be undone. This will permanently delete the all selected items and remove all linked resources.</span>
                        </div>
                    </div>

                    @using (Html.BeginForm(actionName: Model.DeleteActionName, controllerName: Model.ControllerName, routeValues: null, method: FormMethod.Post, antiforgery: false, htmlAttributes: new { id = "bulk-delete-form", autocomplete = "off"}))
                    {
                        if (Model.IsLocalizedContent)
                        {
                            <div class="radio-list" style="margin: 30px 0;">
                                <label class="radio" style="display: block;">
                                    <input type="radio" name="bulkDeleteOptionRadioButton" checked="checked">
                                    <span></span>Just delete for <span id="bulkDeleteModalLanguageNameSpan"></span>  
                                </label>
                            
                                <label class="radio" style="display: block;">
                                    <input id="bulkDeleteAllRadioButton" type="radio" name="bulkDeleteOptionRadioButton">
                                    <span></span>Delete for all languages
                                </label>
                                
                                <input type="hidden" id="bulkDeleteAllInput" asp-for="DeleteAll">
                            </div>    
                        }
                        
                        <strong>Selected Items</strong>
                        <ul id="bulkDeleteModalSelectedItemsNameList"></ul>
                        
                        <p style="margin-top: 10px;">If you are confirm, please enter your password.</p>
                        
                        <input type="hidden" id="bulkDeleteModalItemIdsJsonInput" asp-for="ItemIdsJson">
                        
                        <div class="form-group">
                            <label class="form-label" for="bulkDeleteModalPasswordInput">Password</label>
                            <input id="bulkDeleteModalPasswordInput" type="text" value="" class="form-control" autocomplete="off" style="text-security: disc; -webkit-text-security: disc;" asp-for="Password">
                        </div>
                    }
                </div>
                
                <div class="modal-footer">
                    <button id="bulkDeleteModalSubmitButton" type="submit" class="btn btn-danger btn-block disabled" style="width: 100%;" form="bulk-delete-form" disabled>I understand the consequences, delete all selected</button>
                </div>
            </div>
        </div>
    </div>
}