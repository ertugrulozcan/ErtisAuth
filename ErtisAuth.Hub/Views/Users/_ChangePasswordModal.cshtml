@model ErtisAuth.Hub.ViewModels.Users.ChangePasswordViewModel

<div id="changePasswordModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="changePasswordModalTitle" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="text-transform: capitalize;">
                <h5 id="changePasswordModalTitle" class="modal-title vertical-center-flex">Change Password</h5>
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x-lg"></i>
                </div>
            </div>
            
            <div class="modal-body">
                <form id="changePasswordForm" method="post" asp-controller="Users" asp-action="ChangePassword">
                    <div class="mb-6">
                        <label class="form-label fw-bold fs-6 mb-2 required">
                            Current Password
                        </label>
    
                        <div class="position-relative mb-3">
                            <input class="form-control form-control-lg form-control-solid" type="password" placeholder="" autocomplete="off" asp-for="CurrentPassword"/>
                        </div>
                    </div>
    
                    <div id="kt_password_meter_control" data-kt-password-meter="true">
                        <div class="mb-4">
                            <label class="form-label fw-bold fs-6 mb-2 required">
                                New Password
                            </label>
    
                            <div class="position-relative mb-3">
                                <input class="form-control form-control-lg form-control-solid" type="password" placeholder="" autocomplete="off" asp-for="NewPassword"/>
    
                                <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
                                    <i class="bi bi-eye-slash fs-2"></i>
                                    <i class="bi bi-eye fs-2 d-none"></i>
                                </span>
                            </div>
                        </div>
                        <div class="mb-8">
                            <label class="form-label fw-bold fs-6 mb-2 required">Confirm New Password</label>
                            <input class="form-control form-control-lg form-control-solid" type="password" placeholder="" autocomplete="off" asp-for="NewPasswordAgain"/>
                        </div>
    
                        <div>
                            <div class="mb-1">
                                <div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
                                    <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                                    <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                                    <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                                    <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
                                </div>
                            </div>
    
                            <div class="text-muted">
                                Use 8 or more characters with a mix of letters, numbers & symbols.
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-light btn-sm" data-bs-dismiss="modal">Cancel</button>
				<button type="submit" class="btn btn-success btn-sm" form="changePasswordForm">Submit</button>
            </div>
        </div>
    </div>
</div>