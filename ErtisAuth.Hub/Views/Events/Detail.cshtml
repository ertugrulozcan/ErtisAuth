@using ErtisAuth.Hub.Helpers
@using System.Globalization
@using System.Web
@using Newtonsoft.Json
@model ErtisAuth.Hub.ViewModels.Events.EventDetailViewModel

@{
    ViewData["Title"] = "Events";
}

<script>
    document.addEventListener('DOMContentLoaded', function () {
        let targetElement = document.getElementById('jsonDiffElement');
        let configuration = {
            inputFormat: 'json',
            drawFileList: true,
            fileListToggle: false,
            fileListStartVisible: false,
            fileContentToggle: false,
            matching: 'lines',
            outputFormat: 'side-by-side',
            synchronisedScroll: true,
            highlight: true,
            renderNothingWhenEmpty: false,
        };
        
        let json1 = '@Html.Raw(HttpUtility.JavaScriptStringEncode(Model.Prior != null ? Newtonsoft.Json.JsonConvert.SerializeObject(Model.Prior, Formatting.Indented) : string.Empty))';
        let json2 = '@Html.Raw(HttpUtility.JavaScriptStringEncode(Model.Document != null ? Newtonsoft.Json.JsonConvert.SerializeObject(Model.Document, Formatting.Indented) : string.Empty))';
        
        const diff = Diff.createTwoFilesPatch(
            "@Model.Id",
            "@Model.Id",
            json1,
            json2
          );
        
        let diff2htmlUi = new Diff2HtmlUI(targetElement, diff, configuration);
        diff2htmlUi.draw();
        diff2htmlUi.highlightCode();
    });
</script>

<div class="toolbar" id="kt_toolbar">
    <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
        <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
            <h1 class="d-flex align-items-center text-dark fw-bolder fs-3 my-1">Event Details</h1>
            <span class="h-20px border-gray-200 border-start mx-4"></span>
            
            @{
                var breadcrumb = BreadcrumbBuilder
                    .Add("Home", "Index", "Home")
                    .Add("Events", "Index", "Events")
                    .Add(Model.Id, "Detail", "Events", new { id = Model.Id });
            }
            
            <partial name="Partials/_Breadcrumb" model="@breadcrumb"/>
        </div>
		
        <div class="d-flex align-items-center py-1">
            
        </div>
    </div>
</div>

