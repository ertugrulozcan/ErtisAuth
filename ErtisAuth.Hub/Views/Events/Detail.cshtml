                                    </tr>
                                    <tr>
                                        <td>Username</td>
                                        <td>@Model.User.Username</td>
                                    </tr>
                                    <tr>
                                        <td>Email</td>
                                        <td>@Model.User.EmailAddress</td>
                                    </tr>
                                    <tr>
                                        <td>Role</td>
                                        <td>@Model.User.Role</td>
                                    </tr>
                                </tbody>
                            </table>
